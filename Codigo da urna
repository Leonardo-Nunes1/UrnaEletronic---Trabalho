package com.mycompany.urnaeletronic;
import java.util.Scanner;

class Candidato {
    String nome;
    int numero;
    int votos;

    Candidato(String nome, int numero) {
        this.nome = nome;
        this.numero = numero;
        this.votos = 0;
    }
}

public class UrnaEletronic {

    static int votosBrancos = 0;
    static int votosNulos = 0;

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Dois candidatos ao Senado 
        Candidato[] senadores = {
            new Candidato("Marconi Perillo (PSDB)", 45),
            new Candidato("Jorge Kajuru (PRP)", 44)
        };

        // Candidatos à Presidência
        Candidato[] presidentes = {
            new Candidato("Bolsonaro (PL)", 17),
            new Candidato("Lula (PT)", 13),
            new Candidato("Ciro Gomes (PDT)", 12),
            new Candidato("Simone Tebet (MDB)", 15)
        };

        System.out.println("=== URNA ELETRÔNICA ===");

        boolean continuar = true;
        while (continuar) {
            System.out.println("\n--- NOVA VOTAÇÃO ---");

            votar(scanner, senadores, "Senador");
            votar(scanner, presidentes, "Presidente");

            System.out.print("\nDeseja continuar a votação? (s/n): ");
            String resp = scanner.next();
            if (resp.equalsIgnoreCase("n")) {
                continuar = false;
            }
        }

        mostrarResultados(senadores, presidentes);
       
    }

    // Método para votar (reutilizável para senador e presidente)
    static void votar(Scanner sc, Candidato[] candidatos, String cargo) {
        System.out.println("\n" + cargo.toUpperCase() + ":");
        for (Candidato c : candidatos) {
            System.out.println(c.nome + " - " + c.numero);
        }
        System.out.print("Digite o número do seu voto (0 = Branco): ");
        int voto = sc.nextInt();

        if (voto == 0) {
            votosBrancos++;
            System.out.println("Voto BRANCO registrado.");
            return;
        }

        boolean achou = false;
        for (Candidato c : candidatos) {
            if (c.numero == voto) {
                c.votos++;
                System.out.println("Voto registrado para: " + c.nome);
                achou = true;
                break;
            }
        }

        if (!achou) {
            votosNulos++;
            System.out.println("Voto NULO.");
        }
    }

    // Método para mostrar resultados
    static void mostrarResultados(Candidato[] senadores, Candidato[] presidentes) {
        System.out.println("\n=== RESULTADOS FINAIS ===");

        System.out.println("\n--- SENADOR ---");
        for (Candidato s : senadores) {
            System.out.println(s.nome + ": " + s.votos + " voto(s)");
        }

        System.out.println("\n--- PRESIDENTE ---");
        for (Candidato p : presidentes) {
            System.out.println(p.nome + ": " + p.votos + " voto(s)");
        }

        System.out.println("\nVotos NULOS: " + votosNulos);
        System.out.println("Votos BRANCOS: " + votosBrancos);

        int totalValidos = 0;
        for (Candidato s : senadores) totalValidos += s.votos;
        for (Candidato p : presidentes) totalValidos += p.votos;

        if (totalValidos > 0) {
            double porcNulos = (votosNulos * 100.0) / totalValidos;
            double porcBrancos = (votosBrancos * 100.0) / totalValidos;
            System.out.printf("Porcentagem NULOS: %.2f%%\n", porcNulos);
            System.out.printf("Porcentagem BRANCOS: %.2f%%\n", porcBrancos);
        } else {
            System.out.println("Nenhum voto válido foi registrado.");
        }
    }
}
